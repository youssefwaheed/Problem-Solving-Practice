#define fast std::ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
typedef vector<int> iv;
typedef vector<ll> llv;
#define el "\n"
#define all(x) (x).begin(),(x).end()
#define sz(s) (int)(s).size()
const int N = (int)2e5+5;
void solve() {
   ll n;
   cin>>n;
   if(n & 1){
       cout<<-1<<el;
   }
   else{
       ll x = n/2,y = n/2;
       if(n & x){
           cout<<-1<<el;
       }
       else {
           cout<<x + n <<' '<<y<<el;
       }
   }
}
int main() {
    fast;
    int t = 1;
    cin >> t;
    while (t--)
        solve();
    return 0;
}
