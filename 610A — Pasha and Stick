#define IOS std::ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
typedef vector<int> iv;
typedef vector<ll> llv;
#define el "\n"
#define all(x) (x).begin(),(x).end()
#define sz(s) (int)(s).size()
void solve() {
    int n;
    cin>>n;
    if(n & 1){
        cout<<0<<el;
    }
    else {
        cout << (n % 4 == 0 ? (n / 4) - 1 : n / 4) << el;
    }
}
int main() {
    IOS;
    int t = 1;
    //cin >> t;
    while (t--)
        solve();
    return 0;
}
